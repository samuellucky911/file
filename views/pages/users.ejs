      <th scope="col">Action</th>
      <th scope="col">Transfer</th>
    </tr>
  </thead>
  <tbody class="list-users">
	  
	   
	
  

	
    
  </tbody>
</table>
<% if(message){ %> 
<div class="alert alert-<%= message %> ">
	you have sent <%= amount/100000000 %> BTC 
</div>
	<% } %> 



<div class="container-fluid  transfer_form">
	<div class="row">
		<div class="col-5">
			<form action="/send" class="send_frm" method="POST"> >
				<input type="text" class="form-control my-3" placeholder="Address" id="reciever_address" name="input_addr">
				<button class="btn btn-primary mb-3" type="submit">Send Money</button>
			</form>
		</div>
	</div>
</div>
		</div>
